{
    "$id": "https://kara.wpi.moe/schemas/tagfile",
    "type": "object",
    "properties": {
        "header": {
            "type": "object",
            "properties": {
                "version": {
                    "semver": { "satisfies": "1" }
                },
                "description": {
                    "type": "string",
                    "enum": ["Karaoke Mugen Tag File"]
                }
            }
        },
        "tag": {
            "type": "object",
            "properties": {
                "aliases": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "count": { "type": "integer" },
                "i18n": {
                    "type": "object",
                    "propertyNames": { "type": "string" }
                },
                "modified_at": {
                    "type": "string",
                    "format": "date-time",
                    "minLength": 1
                },
                "karafile_tag": { "type": "string", "minLength": 1 },
                "name": { "type": "string", "minLength": 1 },
                "tid": { "type": "string", "format": "uuid" },
                "types": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/types" }
                },
                "repository": { "type": "string", "minLength": 1 }
            },
            "required": ["tid"]
        }
    },
    "definitions": {
        "types": {
            "type": "string",
            "enum": [
                "series",
                "singers",
                "songtypes",
                "creators",
                "langs",
                "authors",
                "misc",
                "songwriters",
                "groups",
                "families",
                "origins",
                "genres",
                "platforms",
                "versions"
            ]
        }
    }
}
